<?xml version='1.0' encoding='utf-8'?>
<widget id="com.puge.meeting" version="1.0.0"
        xmlns="http://www.w3.org/ns/widgets"
        xmlns:gap="http://phonegap.com/ns/1.0">

    <name>在岗状态系统</name>
    <description>在岗状态系统</description>

    <!-- 强制横屏 & 全屏 -->
    <preference name="orientation" value="landscape" />
    <preference name="Fullscreen" value="true" />

    <!-- 入口页面 -->
    <content src="https://10.1.89.180:5000/resources/staff-status.html" />

    <!-- 插件 -->
    <gap:plugin name="cordova-plugin-whitelist" source="npm" />
    <plugin name="cordova-plugin-network-information" source="npm" />
    <plugin name="cordova-plugin-androidx-adapter" source="npm" />
    <plugin name="cordova-plugin-androidx" source="npm" />

    <!-- 允许访问所有域名 -->
    <access origin="*" />
    <allow-intent href="https://*/*" />
    <allow-navigation href="https://10.1.89.180:5000/*" />

    <!-- Android 图标 -->
    <icon src="res/icon.png" />

    <!-- Android 平台特有设置 -->
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="android-minSdkVersion" value="22" />
        <preference name="android-targetSdkVersion" value="29" />
        
        <!-- 明文 HTTP 不需要，这里只用 HTTPS -->
    </platform>

</widget>
