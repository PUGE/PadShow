<widget id="com.puge.meeting" version="1.0.0"
        xmlns="http://www.w3.org/ns/widgets"
        xmlns:gap="http://phonegap.com/ns/1.0">

    <name>在岗状态系统</name>
    <description>在岗状态系统</description>

    <preference name="orientation" value="landscape" />
    <preference name="Fullscreen" value="true" />

    <content src="https://192.168.1.199:5000/resources/staff-status.html" />

    <gap:plugin name="cordova-plugin-whitelist" source="npm" />
    <plugin name="cordova-plugin-network-information" source="npm" />
    <plugin name="cordova-plugin-androidx-adapter" source="npm" />
    <plugin name="cordova-plugin-androidx" source="npm" />

    <!-- 文件操作插件 -->
    <plugin name="cordova-plugin-file" source="npm" />

    <!-- 自签名 HTTPS -->
    <plugin name="cordova-plugin-certificates" source="npm" />
    <plugin name="cordova-plugin-advanced-http" source="npm" />

    <access origin="*" />
    <allow-navigation href="http://*/*" />
    <allow-navigation href="https://*/*" />

    <icon src="res/icon.png" />

    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="android-minSdkVersion" value="22" />
        <preference name="android-targetSdkVersion" value="29" />
    </platform>

</widget>
