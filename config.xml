<?xml version='1.0' encoding='utf-8'?>
<widget id="com.puge.meeting" version="1.0.0" 
        xmlns="http://www.w3.org/ns/widgets" 
        xmlns:gap="http://phonegap.com/ns/1.0">
    
    <name>在岗状态系统</name>
    <description>在岗状态系统</description>
    
    <!-- 强制横屏 -->
    <preference name="orientation" value="landscape" />
    <!-- 全屏 -->
    <preference name="Fullscreen" value="true" />
    
    <!-- 加载外部网页 -->
    <content src="http://10.1.89.180:5000/resources/staff-status.html" />
    
    <!-- 权限 -->
    <gap:plugin name="cordova-plugin-whitelist" source="npm" />
    <access origin="*" />
    <allow-intent href="https://*/*" />
    <!-- 应用图标 -->
    <icon src="res/icon.png" />
    <!-- Android设置 -->
    <platform name="android">
        <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application">
            <application 
                android:usesCleartextTraffic="true"
                android:networkSecurityConfig="@xml/network_security_config" />
        </edit-config>
        <resource-file src="res/xml/network_security_config.xml" target="app/src/main/res/xml/network_security_config.xml" />
        <allow-intent href="market:*" />
    </platform>
    
    <!-- 插件（可选） -->
    <plugin name="cordova-plugin-network-information" source="npm" />
    
</widget>